{
  "compilerOptions": {
    "module": "ESNext", 
    "target": "ESNext", 
    "moduleResolution": "node", 
    "outDir": "dist", 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*.ts", 
    "server.ts", 
    "ecosystem.config.cjs" 
  ],
  "exclude": [
    "node_modules" 
  ]
}
